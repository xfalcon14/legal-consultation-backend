generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int          @id @default(autoincrement())
  name      String
  email     String       @unique
  password  String
  role      String
  balance   Float        @default(0)
  consultant Consultant?
  sessionsAsClient   Session[] @relation("ClientSessions")
  sessionsAsConsultant Session[] @relation("ConsultantSessions")
}

model Consultant {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  user      User    @relation(fields: [userId], references: [id])
  expertise String?
}

model Session {
  id                Int     @id @default(autoincrement())
  clientId          Int
  consultantId      Int
  totalFee          Float
  adminFee          Float
  consultantEarning Float
  status            String
  client            User    @relation("ClientSessions", fields: [clientId], references: [id])
  consultant        User    @relation("ConsultantSessions", fields: [consultantId], references: [id])
}
