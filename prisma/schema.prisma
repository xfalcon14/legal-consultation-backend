generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String
  balance   Float     @default(0)
  Consultant Consultant?
}

model Consultant {
  id             Int     @id @default(autoincrement())
  user           User    @relation(fields: [userId], references: [id])
  userId         Int
  specialization String
  hourlyRate     Float
}

model Session {
  id                Int      @id @default(autoincrement())
  client            User     @relation("ClientSessions", fields: [clientId], references: [id])
  clientId          Int
  consultant        User     @relation("ConsultantSessions", fields: [consultantId], references: [id])
  consultantId      Int
  totalFee          Float
  adminFee          Float
  consultantEarning Float
  status            String
  createdAt         DateTime @default(now())
}
